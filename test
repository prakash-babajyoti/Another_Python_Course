DECLARE @SearchString NVARCHAR(100) = 'your_string'
DECLARE @SQL NVARCHAR(MAX) = ''

-- Generate the dynamic SQL to select matching rows
SELECT @SQL = @SQL + 'SELECT ''' + QUOTENAME(TABLE_SCHEMA) + '.' + QUOTENAME(TABLE_NAME) + 
    ''' AS TableName, ''' + QUOTENAME(COLUMN_NAME) + ''' AS ColumnName, * FROM ' + QUOTENAME(TABLE_SCHEMA) + '.' + QUOTENAME(TABLE_NAME) + 
    ' WHERE ' + QUOTENAME(COLUMN_NAME) + ' LIKE ''%' + @SearchString + '%' UNION ALL '
FROM INFORMATION_SCHEMA.COLUMNS
WHERE DATA_TYPE IN ('char', 'varchar', 'nchar', 'nvarchar', 'text')
AND TABLE_CATALOG = 'your_database_name'

-- Remove the last 'UNION ALL' for the final query
SET @SQL = LEFT(@SQL, LEN(@SQL) - 10)

-- Execute the dynamic SQL
EXEC sp_executesql @SQL
